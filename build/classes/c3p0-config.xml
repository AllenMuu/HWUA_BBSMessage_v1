<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<property name="jdbcUrl">jdbc:mysql://localhost:3306/msgdb</property>
		<property name="user">root</property>
		<property name="password">123456</property>
		<property name="initialPoolSize">10</property><!--连接池中初始化的连接个数  -->
		<property name="maxIdleTime">30</property><!--最大空闲空闲时间，超过回收  -->
		<property name="maxPoolSize">100</property><!-- 连接池中最多支持的连接数 -->
		<property name="minPoolSize">10</property><!-- 连接池中最少支持的连接数 -->
		<property name="acquireIncrement">5</property><!--每次创建的连接个数  -->
	</default-config>

</c3p0-config>
	